<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:widgets="clr-namespace:WinHAB.Core.ViewModels.Widgets;assembly=WinHAB.Core"
                    xmlns:widgetViews="clr-namespace:WinHAB.Desktop.Views.WidgetViews">
    <DataTemplate DataType="{x:Type widgets:PictureWidget}">
        <widgetViews:PictureWidgetView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type widgets:TextWidget}">
        <widgetViews:TextWidgetView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type widgets:WeatherWidget}">
        <widgetViews:WeatherWidgetView />
    </DataTemplate>
</ResourceDictionary>