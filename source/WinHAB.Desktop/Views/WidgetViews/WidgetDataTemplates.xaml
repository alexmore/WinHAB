<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:widgets="clr-namespace:WinHAB.Core.ViewModels.Widgets;assembly=WinHAB.Core"
                    xmlns:widgetViews="clr-namespace:WinHAB.Desktop.Views.WidgetViews">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Views/WidgetViews/WidgetViewStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <DataTemplate DataType="{x:Type widgets:TextWidget}">
        <Button Style="{StaticResource TextWidgetView}" Command="{Binding DataContext.LoadLinkedPageCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}"/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type widgets:ImageWidget}">
        <Button Style="{StaticResource ImageWidgetView}" Command="{Binding DataContext.LoadLinkedPageCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>